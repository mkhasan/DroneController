<RelativeLayout android:id="@+id/setup_communication"
    android:layout_width="400dp"
    android:layout_height="20dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="50dp"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rmswitch="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/comm_label"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/image_connection"/>

    <ImageButton
        android:id="@+id/comm_btn"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/language_select"
        android:src="@drawable/text_connect"
        android:scaleType="center"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/gps_label"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:background="@drawable/image_gps"/>

    <RelativeLayout
        android:id="@+id/gps_switch_layout"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="visible">

        <com.rm.rmswitch.RMSwitch
            rmswitch:switchBkgNotCheckedColor="@color/white"
            rmswitch:switchBkgCheckedColor="@color/green"
            rmswitch:switchToggleNotCheckedColor="#CCCCCC"
            rmswitch:switchToggleCheckedColor="#CCCCCC"
            rmswitch:forceAspectRatio="true"
            rmswitch:switchDesign="large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3dp"/>
    </RelativeLayout>





</RelativeLayout>
